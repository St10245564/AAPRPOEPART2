<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Disaster Alleviation Foundation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-black: #121212;
            --dark-gray: #1e1e1e;
            --light-gray: #2d2d2d;
            --accent-yellow: #ffd700;
            --bright-yellow: #ffed4e;
            --white: #ffffff;
            --off-white: #f5f5f5;
            --text-gray: #b0b0b0;
            --success-green: #27ae60;
            --warning-orange: #f39c12;
            --error-red: #e74c3c;
            --info-blue: #3498db;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            background-color: var(--primary-black);
            color: var(--white);
        }

        .navbar {
            background: linear-gradient(135deg, var(--primary-black) 0%, var(--dark-gray) 100%) !important;
            border-bottom: 2px solid var(--accent-yellow);
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--accent-yellow) !important;
        }

        .nav-link {
            color: var(--text-gray) !important;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: var(--accent-yellow) !important;
            }

        /* Footer Styles */
        .footer {
            background: linear-gradient(135deg, var(--primary-black) 0%, var(--dark-gray) 100%);
            color: var(--white);
            padding: 60px 0 30px;
            border-top: 3px solid var(--accent-yellow);
            margin-top: 80px;
        }

        .footer-brand h4 {
            font-weight: 700;
            color: var(--white);
        }

        .footer-links .footer-link {
            color: var(--text-gray);
            text-decoration: none;
            transition: all 0.3s ease;
            display: block;
            padding: 5px 0;
        }

            .footer-links .footer-link:hover {
                color: var(--accent-yellow);
                transform: translateX(5px);
            }

        .social-icons {
            display: flex;
            gap: 12px;
        }

        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: var(--light-gray);
            color: var(--accent-yellow);
            border-radius: 50%;
            text-decoration: none;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

            .social-icon:hover {
                background: var(--accent-yellow);
                color: var(--primary-black);
                transform: translateY(-3px);
                border-color: var(--accent-yellow);
            }

        .contact-item {
            display: flex;
            align-items: flex-start;
            gap: 15px;
        }

        .contact-icon {
            width: 24px;
            text-align: center;
            flex-shrink: 0;
        }

        .contact-details strong {
            font-size: 0.9rem;
        }

        .contact-details p {
            font-size: 0.9rem;
            color: var(--text-gray);
        }

        .newsletter-form .form-control {
            border-radius: 8px 0 0 8px;
            border-right: none;
            background: var(--light-gray);
            border: 1px solid var(--accent-yellow);
            color: var(--white);
        }

            .newsletter-form .form-control:focus {
                box-shadow: none;
                border-color: var(--accent-yellow);
            }

        .newsletter-form .btn {
            border-radius: 0 8px 8px 0;
            font-weight: 600;
            transition: all 0.3s ease;
            background: var(--accent-yellow);
            color: var(--primary-black);
            border: 1px solid var(--accent-yellow);
        }

            .newsletter-form .btn:hover {
                background: var(--bright-yellow);
                transform: scale(1.05);
            }

        .footer-bottom-links .footer-link {
            color: var(--text-gray);
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

            .footer-bottom-links .footer-link:hover {
                color: var(--accent-yellow);
            }

        .emergency-alert {
            border-radius: 6px;
            background: rgba(255, 215, 0, 0.1);
            border-left: 4px solid var(--accent-yellow);
        }

        /* Responsive Footer */
        @@media (max-width: 768px) {
            .footer {
                padding: 40px 0 20px;
                text-align: center;
            }

            .contact-item {
                justify-content: center;
                text-align: center;
            }

            .social-icons {
                justify-content: center;
            }

            .footer-bottom-links {
                margin-top: 15px;
                text-align: center;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hands-helping"></i> Disaster Alleviation Foundation
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Incident" asp-action="Index">Incidents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Donation" asp-action="Index">Donations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Volunteer" asp-action="Index">Volunteers</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Donation" asp-action="Index">My Donations</a></li>
                                    <li><a class="dropdown-item" asp-controller="Volunteer" asp-action="MyRegistration">My Volunteer Registration</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-brand">
                        <i class="fas fa-hands-helping fa-2x mb-3" style="color: var(--accent-yellow);"></i>
                        <h4 class="text-white mb-3">Disaster Alleviation Foundation</h4>
                        <p class="text-gray-300">
                            Providing immediate relief and sustainable support to communities in crisis through coordinated emergency response and compassionate service.
                        </p>
                        <div class="social-icons mt-4">
                            <a href="#" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-youtube"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="text-white mb-4">Quick Actions</h5>
                    <ul class="list-unstyled footer-links">
                        <li class="mb-2">
                            <a asp-controller="Incident" asp-action="Report" class="footer-link">
                                <i class="fas fa-exclamation-triangle me-2" style="color: var(--accent-yellow);"></i>
                                Report Emergency
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Donation" asp-action="Create" class="footer-link">
                                <i class="fas fa-donate me-2" style="color: var(--accent-yellow);"></i>
                                Make Donation
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Volunteer" asp-action="Register" class="footer-link">
                                <i class="fas fa-hands-helping me-2" style="color: var(--accent-yellow);"></i>
                                Become Volunteer
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Incident" asp-action="Index" class="footer-link">
                                <i class="fas fa-list me-2" style="color: var(--accent-yellow);"></i>
                                View Incidents
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-white mb-4">Emergency Contacts</h5>
                    <div class="contact-info">
                        <div class="contact-item mb-3">
                            <div class="contact-icon">
                                <i class="fas fa-phone-alt" style="color: var(--accent-yellow);"></i>
                            </div>
                            <div class="contact-details">
                                <strong class="text-white">Emergency Hotline</strong>
                                <p class="mb-0">0800 123 456</p>
                            </div>
                        </div>
                        <div class="contact-item mb-3">
                            <div class="contact-icon">
                                <i class="fas fa-envelope" style="color: var(--accent-yellow);"></i>
                            </div>
                            <div class="contact-details">
                                <strong class="text-white">Email</strong>
                                <p class="mb-0">emergency@daf.org</p>
                            </div>
                        </div>
                        <div class="contact-item mb-3">
                            <div class="contact-icon">
                                <i class="fas fa-clock" style="color: var(--accent-yellow);"></i>
                            </div>
                            <div class="contact-details">
                                <strong class="text-white">24/7 Support</strong>
                                <p class="mb-0">Always Available</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-white mb-4">Newsletter</h5>
                    <p class="text-gray-300 mb-3">
                        Stay updated with our latest emergency responses and relief efforts.
                    </p>
                    <div class="newsletter-form">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email">
                            <button class="btn btn-warning" type="button">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                    <div class="emergency-alert mt-3 p-3 rounded">
                        <small class="text-white">
                            <i class="fas fa-exclamation-circle me-1" style="color: var(--accent-yellow);"></i>
                            <strong>Emergency Alert:</strong> Monitor local authorities for disaster updates.
                        </small>
                    </div>
                </div>
            </div>

            <hr style="border-color: var(--light-gray); margin: 2rem 0;">

            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">
                        &copy; 2024 Disaster Alleviation Foundation. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="footer-bottom-links">
                        <a href="#" class="footer-link me-3">Privacy Policy</a>
                        <a href="#" class="footer-link me-3">Terms of Service</a>
                        <a href="#" class="footer-link">Accessibility</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>