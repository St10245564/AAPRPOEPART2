@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        :root {
            --primary-black: #121212;
            --dark-gray: #1e1e1e;
            --light-gray: #2d2d2d;
            --accent-yellow: #ffd700;
            --bright-yellow: #ffed4e;
            --white: #ffffff;
            --off-white: #f5f5f5;
            --text-gray: #b0b0b0;
            --success-green: #27ae60;
            --warning-orange: #f39c12;
            --error-red: black;
            --info-blue: yellow;
        }

        .emergency-hero {
            background: linear-gradient(135deg, var(--primary-black) 0%, var(--dark-gray) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .hero-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(255, 215, 0, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 215, 0, 0.1) 0%, transparent 50%),
                url('https://images.unsplash.com/photo-1593113630400-ea4288922497?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            background-blend-mode: overlay;
            opacity: 0.3;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: var(--white);
            padding: 4rem 0;
        }

        .hero-badge {
            background: linear-gradient(135deg, var(--error-red), #c0392b);
            color: var(--white);
            padding: 12px 30px;
            border-radius: 30px;
            font-weight: 700;
            display: inline-block;
            margin-bottom: 2rem;
            box-shadow: 0 4px 15px rgba(231, 76, 60, 0.4);
            animation: pulse 2s infinite;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            line-height: 1.1;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        .hero-subtitle {
            font-size: 1.4rem;
            color: var(--text-gray);
            margin-bottom: 3rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }

        .action-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin: 4rem 0;
        }

        .action-card {
            background: var(--dark-gray);
            border-radius: 20px;
            padding: 3rem 2rem;
            text-align: center;
            border: 2px solid transparent;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,215,0,0.1), transparent);
            transition: left 0.6s ease;
        }

        .action-card:hover::before {
            left: 100%;
        }

        .action-card:hover {
            transform: translateY(-10px);
            border-color: var(--accent-yellow);
            box-shadow: 0 20px 40px rgba(255,215,0,0.2);
        }

        .action-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--accent-yellow), var(--bright-yellow));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
            color: var(--primary-black);
        }

        .action-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--accent-yellow);
        }

        .action-description {
            color: var(--text-gray);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .btn-action {
            padding: 12px 30px;
            font-weight: 700;
            border-radius: 10px;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .mission-section {
            background: var(--light-gray);
            padding: 6rem 0;
            position: relative;
        }

        .mission-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
        }

        .mission-image {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
        }

        .mission-image img {
            width: 100%;
            height: 500px;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .mission-image:hover img {
            transform: scale(1.05);
        }

        .mission-content h2 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 2rem;
            color: var(--accent-yellow);
        }

        .mission-content p {
            font-size: 1.2rem;
            color: var(--text-gray);
            line-height: 1.8;
            margin-bottom: 2rem;
        }

        .stats-showcase {
            background: linear-gradient(135deg, var(--primary-black), var(--dark-gray));
            padding: 6rem 0;
            border-top: 3px solid var(--accent-yellow);
            border-bottom: 3px solid var(--accent-yellow);
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 3rem;
            text-align: center;
        }

        .stat-circle {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent-yellow), var(--bright-yellow));
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            position: relative;
        }

        .stat-circle::before {
            content: '';
            position: absolute;
            width: 130px;
            height: 130px;
            border: 2px solid var(--accent-yellow);
            border-radius: 50%;
            animation: rotate 3s linear infinite;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-black);
        }

        .stat-label {
            font-size: 1.1rem;
            color: var(--text-gray);
            font-weight: 600;
        }

        .testimonials-section {
            padding: 6rem 0;
            background: var(--dark-gray);
        }

        .testimonial-carousel {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .testimonial-item {
            background: var(--light-gray);
            padding: 2.5rem;
            border-radius: 20px;
            border-left: 5px solid var(--accent-yellow);
            position: relative;
        }

        .testimonial-quote {
            font-size: 1.1rem;
            color: var(--text-gray);
            line-height: 1.7;
            margin-bottom: 1.5rem;
            font-style: italic;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .author-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent-yellow), var(--bright-yellow));
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary-black);
            font-weight: bold;
        }

        .author-info h4 {
            color: var(--accent-yellow);
            margin: 0;
            font-size: 1.1rem;
        }

        .author-info p {
            color: var(--text-gray);
            margin: 0;
            font-size: 0.9rem;
        }

        .emergency-alert-section {
            background: linear-gradient(135deg, var(--error-red), #c0392b);
            padding: 3rem 0;
            text-align: center;
            color: var(--white);
        }

        .alert-content {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .alert-icon {
            font-size: 3rem;
            animation: bounce 2s infinite;
        }

        keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .mission-grid {
                grid-template-columns: 1fr;
            }

            .action-grid {
                grid-template-columns: 1fr;
            }

            .stats-container {
                grid-template-columns: repeat(2, 1fr);
            }

            .testimonial-carousel {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<!-- Emergency Hero Section -->
<section class="emergency-hero">
    <div class="hero-background"></div>
    <div class="container">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="fas fa-exclamation-triangle me-2"></i>URGENT: Your Help is Needed Now!
            </div>
            <h1 class="hero-title">Together We Can Make a Difference</h1>
            <p class="hero-subtitle">
                When disasters strike, every second counts. Join our global community of heroes providing
                <span style="color: var(--accent-yellow);">immediate relief</span> and
                <span style="color: var(--success-green);">sustainable support</span> to families and communities in crisis worldwide.
                <span style="color: var(--info-blue);">Your action matters!</span>
            </p>

            <!-- Action Grid -->
            <div class="action-grid">
                <div class="action-card">
                    <div class="action-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h3 class="action-title">Emergency Reporting</h3>
                    <p class="action-description">
                        Report disaster incidents in real-time to activate our rapid response teams.
                        Your alert could save countless lives by ensuring help arrives when it's needed most.
                    </p>
                    <a asp-controller="Incident" asp-action="Report" class="btn-action btn-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>Report Emergency
                    </a>
                </div>

                <div class="action-card">
                    <div class="action-icon">
                        <i class="fas fa-donate"></i>
                    </div>
                    <h3 class="action-title">Life-Saving Donations</h3>
                    <p class="action-description">
                        Provide critical resources: food, clean water, medical supplies,
                        and shelter to families who have lost everything. Your generosity brings hope!
                    </p>
                    <a asp-controller="Donation" asp-action="Create" class="btn-action btn-success" style="color: var(--primary-black);">
                        <i class="fas fa-donate me-2"></i>Make Donation
                    </a>
                </div>

                <div class="action-card">
                    <div class="action-icon">
                        <i class="fas fa-hands-helping"></i>
                    </div>
                    <h3 class="action-title">Volunteer Coordination</h3>
                    <p class="action-description">
                        Join thousands of compassionate volunteers making a direct impact.
                        Your skills can rebuild lives and restore hope in affected communities.
                    </p>
                    <a asp-controller="Volunteer" asp-action="Register" class="btn-action btn-warning">
                        <i class="fas fa-hands-helping me-2"></i>Become Volunteer
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission Section -->
<section class="mission-section">
    <div class="container">
        <div class="mission-grid">
            <div class="mission-image">
                <img src="https://images.unsplash.com/photo-1541336032412-2048a678540d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80" alt="Community Recovery">
            </div>
            <div class="mission-content">
                <h2>Our Mission: Hope in Crisis</h2>
                <p>
                    We believe that every person deserves help during their darkest hours. Our mission is to provide 
                    immediate, coordinated response to disasters worldwide, bringing hope and practical support to 
                    communities in need.
                </p>
                <p>
                    Through the power of technology and human compassion, we connect those who need help with those 
                    who can provide it. Your involvement creates real change where it matters most.
                </p>
                <a asp-controller="Incident" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-list me-2"></i>View Active Incidents
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Stats Showcase -->
<section class="stats-showcase">
    <div class="container">
        <div class="stats-container">
            <div class="stat-item">
                <div class="stat-circle">
                    <span class="stat-number">1,250+</span>
                </div>
                <div class="stat-label">Emergencies Responded</div>
            </div>
            <div class="stat-item">
                <div class="stat-circle">
                    <span class="stat-number">45.8K</span>
                </div>
                <div class="stat-label">Volunteers Registered</div>
            </div>
            <div class="stat-item">
                <div class="stat-circle">
                    <span class="stat-number">$2.8M</span>
                </div>
                <div class="stat-label">Donations Collected</div>
            </div>
            <div class="stat-item">
                <div class="stat-circle">
                    <span class="stat-number">62</span>
                </div>
                <div class="stat-label">Countries Reached</div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section">
    <div class="container">
        <h2 class="section-title text-center">Stories of Hope & Recovery</h2>
        <div class="testimonial-carousel">
            <div class="testimonial-item">
                <p class="testimonial-quote">
                    "After the hurricane destroyed our home, we felt hopeless. But within hours,
                    volunteers arrived with food, water, and supplies. Today, thanks to your support,
                    our community is rebuilding stronger than ever!"
                </p>
                <div class="testimonial-author">
                    <div class="author-avatar">MG</div>
                    <div class="author-info">
                        <h4>Maria Gonzalez</h4>
                        <p>Disaster Survivor</p>
                    </div>
                </div>
            </div>
            <div class="testimonial-item">
                <p class="testimonial-quote">
                    "As a volunteer doctor, I've witnessed incredible resilience. The quick response
                    and coordinated efforts saved countless lives during the flood crisis.
                    Being part of this mission is life-changing!"
                </p>
                <div class="testimonial-author">
                    <div class="author-avatar">JW</div>
                    <div class="author-info">
                        <h4>Dr. James Wilson</h4>
                        <p>Volunteer Doctor</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Emergency Alert Section -->
<section class="emergency-alert-section">
    <div class="container">
        <div class="alert-content">
            <div class="alert-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="alert-text">
                <h3 class="mb-2">Latest Crisis Alerts</h3>
                <p class="mb-0">
                    Hurricane response in Florida | Earthquake relief in Nepal |
                    Wildfire support in California | Flood assistance in Bangladesh
                </p>
            </div>
        </div>
    </div>
</section>