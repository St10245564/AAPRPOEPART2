@model AAPRPOEPART2.Models.VolunteerViewModel
@{
    ViewData["Title"] = "Volunteer Registration";
}

@section Styles {
    <style>
        :root {
            --primary-black: #121212;
            --dark-gray: #1e1e1e;
            --light-gray: #2d2d2d;
            --accent-yellow: #ffd700;
            --bright-yellow: #ffed4e;
            --white: #ffffff;
            --off-white: #f5f5f5;
            --text-gray: #b0b0b0;
            --urgent-red: #121212;
            --warning-orange: #f39c12;
            --success-green: #27ae60;
            --info-blue: #3498db;
        }

        .volunteer-registration-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--primary-black) 0%, var(--dark-gray) 100%);
            padding: 20px 0;
            color: var(--white);
        }

        .registration-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            transition: all 0.3s ease;
            background: var(--dark-gray);
            border-left: 5px solid var(--accent-yellow);
        }

            .registration-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(255, 215, 0, 0.2);
            }

        .card-header {
            background: linear-gradient(135deg, var(--primary-black) 0%, var(--light-gray) 100%);
            color: var(--white);
            padding: 2rem;
            text-align: center;
            border-bottom: none;
            position: relative;
            overflow: hidden;
            border-bottom: 2px solid var(--accent-yellow);
        }

            .card-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 30% 20%, rgba(255, 215, 0, 0.1) 0%, transparent 50%);
            }

            .card-header h4 {
                position: relative;
                z-index: 1;
                font-weight: 700;
                margin: 0;
                font-size: 1.8rem;
            }

            .card-header i {
                margin-right: 10px;
                font-size: 1.5rem;
            }

        .card-body {
            padding: 2.5rem;
            background: var(--dark-gray);
        }

        .registration-decoration {
            text-align: center;
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 215, 0, 0.05));
            border-radius: 15px;
            border: 2px dashed var(--accent-yellow);
        }

        .decoration-icons {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: var(--accent-yellow);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--accent-yellow);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

            .form-label i {
                margin-right: 8px;
                font-size: 1.1rem;
                width: 16px;
                text-align: center;
            }

            .form-label.required::after {
                content: ' *';
                color: var(--urgent-red);
            }

        .form-control {
            border: 2px solid var(--light-gray);
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: var(--light-gray);
            color: var(--white);
        }

            .form-control:focus {
                border-color: var(--accent-yellow);
                box-shadow: 0 0 0 0.2rem rgba(255, 215, 0, 0.25);
                background: var(--light-gray);
                color: var(--white);
            }

            .form-control::placeholder {
                color: var(--text-gray);
                opacity: 0.7;
            }

        textarea.form-control {
            resize: vertical;
            min-height: 100px;
        }

        .form-select {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23ffd700' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 0.75rem center;
            background-repeat: no-repeat;
            background-size: 16px 12px;
        }

        .form-check {
            margin-bottom: 1rem;
            padding-left: 2.5rem;
        }

        .form-check-input {
            width: 1.2em;
            height: 1.2em;
            margin-left: -2.5rem;
            margin-top: 0.2em;
            border: 2px solid var(--light-gray);
            border-radius: 4px;
            background-color: var(--light-gray);
        }

            .form-check-input:checked {
                background-color: var(--accent-yellow);
                border-color: var(--accent-yellow);
            }

            .form-check-input:focus {
                border-color: var(--accent-yellow);
                box-shadow: 0 0 0 0.2rem rgba(255, 215, 0, 0.25);
            }

        .form-check-label {
            color: var(--text-gray);
            font-weight: 500;
            display: flex;
            align-items: center;
        }

            .form-check-label i {
                margin-right: 8px;
                font-size: 1.1rem;
                color: var(--accent-yellow);
            }

        .btn-register {
            background: linear-gradient(135deg, var(--warning-orange), #e67e22);
            border: none;
            border-radius: 12px;
            padding: 14px 30px;
            font-weight: 700;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(243, 156, 18, 0.3);
            color: var(--white);
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(243, 156, 18, 0.4);
                background: linear-gradient(135deg, #e67e22, var(--warning-orange));
            }

        .btn-cancel {
            background: linear-gradient(135deg, var(--light-gray), var(--dark-gray));
            border: 2px solid var(--text-gray);
            border-radius: 12px;
            padding: 14px 30px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            color: var(--text-gray);
        }

            .btn-cancel:hover {
                transform: translateY(-2px);
                background: var(--text-gray);
                color: var(--primary-black);
                border-color: var(--text-gray);
            }

            .btn-register i, .btn-cancel i {
                margin-right: 8px;
            }

        .text-danger {
            color: var(--urgent-red) !important;
            font-size: 0.9rem;
            margin-top: 5px;
            display: flex;
            align-items: center;
        }

            .text-danger i {
                margin-right: 5px;
            }

        .alert-danger {
            background: linear-gradient(135deg, rgba(231, 76, 60, 0.1), rgba(192, 57, 43, 0.05));
            border: 2px solid var(--urgent-red);
            border-radius: 12px;
            color: var(--urgent-red);
            font-weight: 600;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
        }

        .alert-info {
            background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 215, 0, 0.05));
            border: 2px solid var(--accent-yellow);
            border-radius: 12px;
            color: var(--text-gray);
            font-weight: 600;
            padding: 1.5rem;
            margin: 2rem 0;
            border-left: 5px solid var(--accent-yellow);
        }

            .alert-info h6 {
                color: var(--accent-yellow);
            }

        .validation-summary-errors {
            background: linear-gradient(135deg, rgba(231, 76, 60, 0.1), rgba(192, 57, 43, 0.05));
            border: 2px solid var(--urgent-red);
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            color: var(--urgent-red);
            font-weight: 600;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 1rem;
            }

        .form-hint {
            font-size: 0.8rem;
            color: var(--text-gray);
            margin-top: 3px;
            display: flex;
            align-items: center;
        }

            .form-hint i {
                margin-right: 5px;
                width: 12px;
                text-align: center;
            }

        /* Floating animation for icons */
        @@keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-5px);
            }
        }

        .decoration-icons i {
            display: inline-block;
            animation: float 3s ease-in-out infinite;
            margin: 0 10px;
        }

            .decoration-icons i:nth-child(2) {
                animation-delay: 0.5s;
            }

            .decoration-icons i:nth-child(3) {
                animation-delay: 1s;
            }

            .decoration-icons i:nth-child(4) {
                animation-delay: 1.5s;
            }

        /* Responsive design */
        @@media (max-width: 768px) {
            .volunteer-registration-container {
                padding: 10px;
            }

            .card-body {
                padding: 2rem 1.5rem;
            }

            .card-header {
                padding: 1.5rem;
            }

                .card-header h4 {
                    font-size: 1.5rem;
                }

            .btn-group {
                flex-direction: column;
                gap: 10px;
            }

            .btn-register, .btn-cancel {
                width: 100%;
            }

            .decoration-icons i {
                margin: 0 5px;
                font-size: 1.5rem;
            }
        }

        /* Loading state for button */
        .btn-register.loading {
            position: relative;
            color: transparent;
        }

            .btn-register.loading::after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                top: 50%;
                left: 50%;
                margin-left: -10px;
                margin-top: -10px;
                border: 2px solid var(--white);
                border-radius: 50%;
                border-top-color: transparent;
                animation: spin 1s ease-in-out infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
}

<div class="volunteer-registration-container">
    <div class="row justify-content-center w-100">
        <div class="col-md-10 col-lg-8">
            <div class="registration-card">
                <div class="card-header">
                    <h4><i class="fas fa-hands-helping"></i> Join Our Volunteer Team</h4>
                </div>
                <div class="card-body">
                    <div class="registration-decoration">
                        <div class="decoration-icons">
                            <i class="fas fa-handshake"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-heart"></i>
                            <i class="fas fa-users"></i>
                        </div>
                        <p class="mb-0" style="color: var(--text-gray);"><strong>Become a Hero!</strong> Your skills and time can make a real difference in people's lives during emergencies.</p>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Register" method="post" id="volunteerForm">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger validation-summary-errors"></div>

                        <!-- Skills -->
                        <div class="form-group">
                            <label asp-for="Skills" class="form-label required">
                                <i class="fas fa-tools"></i>Your Skills & Expertise
                            </label>
                            <textarea asp-for="Skills" class="form-control" rows="3"
                                      placeholder="List your skills and expertise that could help during emergencies (e.g., First Aid, Construction, Counseling, Logistics, Cooking, Language Translation, Technical Skills, etc.)"></textarea>
                            <span asp-validation-for="Skills" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                            <div class="form-hint"><i class="fas fa-lightbulb"></i>Be specific about your abilities - every skill is valuable!</div>
                        </div>

                        <!-- Availability -->
                        <div class="form-group">
                            <label asp-for="Availability" class="form-label required">
                                <i class="fas fa-calendar-alt"></i>Availability
                            </label>
                            <select asp-for="Availability" class="form-select">
                                <option value="">Select Your Availability</option>
                                <option value="Weekdays">Weekdays (Mon-Fri)</option>
                                <option value="Weekends">Weekends (Sat-Sun)</option>
                                <option value="Evenings">Evenings Only</option>
                                <option value="Flexible">Flexible - Anytime</option>
                                <option value="Emergency Only">Emergency Response Only</option>
                            </select>
                            <span asp-validation-for="Availability" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                            <div class="form-hint"><i class="fas fa-clock"></i>When are you typically available to help?</div>
                        </div>

                        <!-- Preferred Location -->
                        <div class="form-group">
                            <label asp-for="PreferredLocation" class="form-label required">
                                <i class="fas fa-map-marker-alt"></i>Preferred Location
                            </label>
                            <input asp-for="PreferredLocation" class="form-control"
                                   placeholder="City, region, or area where you prefer to volunteer" list="locationSuggestions" />
                            <datalist id="locationSuggestions">
                                <option value="Local Community" />
                                <option value="Regional" />
                                <option value="Anywhere Needed" />
                                <option value="Within 50km radius" />
                                <option value="Specific disaster areas" />
                            </datalist>
                            <span asp-validation-for="PreferredLocation" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                            <div class="form-hint"><i class="fas fa-location-arrow"></i>Where would you be willing to volunteer?</div>
                        </div>

                        <!-- Emergency Contact -->
                        <div class="form-group">
                            <label asp-for="EmergencyContact" class="form-label required">
                                <i class="fas fa-phone-alt"></i>Emergency Contact
                            </label>
                            <input asp-for="EmergencyContact" class="form-control"
                                   placeholder="Name and phone number of emergency contact person" />
                            <span asp-validation-for="EmergencyContact" class="text-danger"><i class="fas fa-exclamation-circle"></i></span>
                            <div class="form-hint"><i class="fas fa-shield-alt"></i>This will only be used in case of emergency during volunteer activities</div>
                        </div>

                        <!-- Transportation -->
                        <div class="form-check">
                            <input asp-for="HasTransportation" class="form-check-input" />
                            <label asp-for="HasTransportation" class="form-check-label">
                                <i class="fas fa-car"></i>I have reliable transportation and can travel to volunteer locations
                            </label>
                        </div>

                        <!-- Information Alert -->
                        <div class="alert alert-info">
                            <h6><i class="fas fa-shield-alt"></i> Volunteer Commitment</h6>
                            <small>
                                By registering as a volunteer, you join our community of heroes ready to help during disasters.
                                You'll only be contacted for efforts matching your skills and availability.
                                <strong>Your privacy is protected</strong> - information is used solely for coordinating relief efforts.
                                Training and support will be provided as needed.
                            </small>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end btn-group">
                            <a asp-action="Index" class="btn btn-cancel">
                                <i class="fas fa-arrow-left"></i> Back to Safety
                            </a>
                            <button type="submit" class="btn btn-register" id="registerButton">
                                <i class="fas fa-user-check"></i> Join Volunteer Team
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add loading state to button on form submit
        document.getElementById('volunteerForm').addEventListener('submit', function () {
            const button = document.getElementById('registerButton');
            button.classList.add('loading');
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-user-check"></i> Joining Volunteer Team...';
        });

        // Skills character counter
        const skillsTextarea = document.querySelector('textarea[name="Skills"]');
        if (skillsTextarea) {
            const counter = document.createElement('div');
            counter.className = 'form-hint';
            counter.style.textAlign = 'right';
            skillsTextarea.parentElement.appendChild(counter);

            skillsTextarea.addEventListener('input', function () {
                const count = this.value.length;
                counter.innerHTML = `<i class="fas fa-text-height"></i>${count} characters`;

                if (count < 20) {
                    counter.style.color = 'var(--urgent-red)';
                } else if (count < 50) {
                    counter.style.color = 'var(--warning-orange)';
                } else {
                    counter.style.color = 'var(--success-green)';
                }
            });

            // Trigger initial count
            skillsTextarea.dispatchEvent(new Event('input'));
        }

        // Add focus effects to form inputs
        const inputs = document.querySelectorAll('.form-control, .form-select');
        inputs.forEach(input => {
            input.addEventListener('focus', function () {
                this.parentElement.classList.add('focused');
            });

            input.addEventListener('blur', function () {
                if (!this.value) {
                    this.parentElement.classList.remove('focused');
                }
            });
        });

        // Transportation checkbox enhancement
        const transportCheckbox = document.querySelector('input[name="HasTransportation"]');
        if (transportCheckbox) {
            transportCheckbox.addEventListener('change', function () {
                const label = this.closest('.form-check').querySelector('.form-check-label');
                if (this.checked) {
                    label.style.color = 'var(--accent-yellow)';
                    label.style.fontWeight = '600';
                } else {
                    label.style.color = 'var(--text-gray)';
                    label.style.fontWeight = '500';
                }
            });
        }
    </script>
}