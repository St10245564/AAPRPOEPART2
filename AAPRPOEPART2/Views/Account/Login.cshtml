@model AAPRPOEPART2.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    :root {
        --primary-black: #121212;
        --dark-gray: #1e1e1e;
        --light-gray: #2d2d2d;
        --accent-yellow: #ffd700;
        --bright-yellow: #ffed4e;
        --white: #ffffff;
        --off-white: #f5f5f5;
        --text-gray: #b0b0b0;
    }
    
    * {
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
        background-color: var(--primary-black);
        margin: 0;
        padding: 0;
        color: var(--white);
    }
    
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--primary-black) 0%, var(--dark-gray) 100%);
        padding: 20px;
        position: relative;
        overflow: hidden;
    }
    
    .login-container::before {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, transparent 20%, var(--primary-black) 70%);
        opacity: 0.05;
        animation: pulse 15s infinite linear;
    }
    
    .login-card {
        width: 100%;
        max-width: 450px;
        background: var(--dark-gray);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
        border: 1px solid var(--light-gray);
    }
    
    .login-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.6);
    }
    
    .card-header {
        background: var(--light-gray);
        color: var(--white);
        padding: 2rem;
        text-align: center;
        border-bottom: 2px solid var(--accent-yellow);
        position: relative;
    }
    
    .card-header h4 {
        font-weight: 700;
        margin: 0;
        font-size: 1.8rem;
        letter-spacing: 0.5px;
    }
    
    .card-header h4::after {
        content: '';
        display: block;
        width: 50px;
        height: 3px;
        background: var(--accent-yellow);
        margin: 10px auto 0;
        border-radius: 2px;
    }
    
    .card-body {
        padding: 2.5rem;
        background: var(--dark-gray);
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 600;
        color: var(--off-white);
        margin-bottom: 0.5rem;
        display: block;
        font-size: 0.95rem;
        letter-spacing: 0.3px;
    }
    
    .form-control {
        border: 2px solid var(--light-gray);
        border-radius: 8px;
        padding: 14px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: var(--primary-black);
        color: var(--white);
        width: 100%;
    }
    
    .form-control:focus {
        border-color: var(--accent-yellow);
        box-shadow: 0 0 0 2px rgba(255, 215, 0, 0.2);
        background: var(--primary-black);
        outline: none;
    }
    
    .form-control::placeholder {
        color: var(--text-gray);
    }
    
    .btn-login {
        background: linear-gradient(135deg, var(--accent-yellow), var(--bright-yellow));
        border: none;
        border-radius: 8px;
        padding: 16px 20px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
        color: var(--primary-black);
        width: 100%;
        cursor: pointer;
        letter-spacing: 0.5px;
    }
    
    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 215, 0, 0.4);
        background: linear-gradient(135deg, var(--bright-yellow), var(--accent-yellow));
    }
    
    .btn-login:active {
        transform: translateY(0);
    }
    
    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
        font-weight: 500;
    }
    
    .register-link {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--light-gray);
    }
    
    .register-link p {
        margin: 0;
        color: var(--text-gray);
    }
    
    .register-link a {
        color: var(--accent-yellow);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
        position: relative;
    }
    
    .register-link a:hover {
        color: var(--bright-yellow);
    }
    
    .register-link a::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: var(--accent-yellow);
        transform: scaleX(0);
        transform-origin: bottom right;
        transition: transform 0.3s ease;
    }
    
    .register-link a:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
    }
    
    .validation-summary-errors {
        background: rgba(255, 107, 107, 0.1);
        border: 1px solid #ff6b6b;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #ff6b6b;
        font-weight: 600;
    }
    
    .validation-summary-errors ul {
        margin: 0;
        padding-left: 1rem;
    }
    
    .login-decoration {
        text-align: center;
        margin-bottom: 2rem;
    }
    
    .decoration-icons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 1rem;
    }
    
    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: var(--light-gray);
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid var(--accent-yellow);
    }
    
    .icon-circle i {
        color: var(--accent-yellow);
        font-size: 1.5rem;
    }
    
    /* Animations */
    keyframes pulse {
        0% {
            transform: translate(-50%, -50%) scale(1);
        }
        50% {
            transform: translate(-30%, -30%) scale(1.1);
        }
        100% {
            transform: translate(-50%, -50%) scale(1);
        }
    }
    
    keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }
    
    .icon-circle:nth-child(1) { animation: float 3s ease-in-out infinite; }
    .icon-circle:nth-child(2) { animation: float 3s ease-in-out infinite 0.5s; }
    .icon-circle:nth-child(3) { animation: float 3s ease-in-out infinite 1s; }
    
    /* Responsive design */
    @@media (max-width: 768px) {
        .login-container {
            padding: 10px;
        }
        
        .card-body {
            padding: 2rem 1.5rem;
        }
        
        .card-header {
            padding: 1.5rem;
        }
        
        .card-header h4 {
            font-size: 1.5rem;
        }
        
        .decoration-icons {
            gap: 15px;
        }
        
        .icon-circle {
            width: 50px;
            height: 50px;
        }
        
        .icon-circle i {
            font-size: 1.2rem;
        }
    }
    
    /* Loading state for button */
    .btn-login.loading {
        position: relative;
        color: transparent;
    }
    
    .btn-login.loading::after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        top: 50%;
        left: 50%;
        margin-left: -10px;
        margin-top: -10px;
        border: 2px solid var(--primary-black);
        border-radius: 50%;
        border-top-color: transparent;
        animation: spin 1s ease-in-out infinite;
    }
    
    keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    /* Focus state for form groups */
    .form-group.focused .form-label {
        color: var(--accent-yellow);
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="card-header">
            <h4>Welcome Back</h4>
        </div>
        <div class="card-body">
            <div class="login-decoration">
                <div class="decoration-icons">
                    <div class="icon-circle">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="icon-circle">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="icon-circle">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                </div>
            </div>
            
            <form asp-action="Login" method="post" id="loginForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn-login" id="loginButton">
                        Sign In to Your Account
                    </button>
                </div>
            </form>

            <div class="register-link">
                <p>
                    New to our community? 
                    <a asp-action="Register">Create an account here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add loading state to button on form submit
        document.getElementById('loginForm').addEventListener('submit', function() {
            const button = document.getElementById('loginButton');
            button.classList.add('loading');
            button.disabled = true;
        });

        // Add focus effects to form inputs
        const inputs = document.querySelectorAll('.form-control');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });
            
            input.addEventListener('blur', function() {
                if (!this.value) {
                    this.parentElement.classList.remove('focused');
                }
            });
        });
    </script>
}